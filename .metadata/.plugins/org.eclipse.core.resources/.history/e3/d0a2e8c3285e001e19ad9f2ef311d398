public class Animal{
	
	public void makeSound() 
	{
		System.out.println("This is my first code.");
	}
}
 public class cat extends Animal{
	 
	 public void makeSound() 
	 {
		 System.out.println("I am cat i say owww,owww.");
	 }
	 
 }
 
 class Inheritance{
	 
	 public static void main(String[] args) {
		// Animal obj1=new Animal();
		 cat obj2=new cat();
		 
//		 obj1.makeSound();
		 obj2.makeSound();
	 }
 }
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 

