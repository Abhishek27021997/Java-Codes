class Animal {
    public void makeSound() {
        System.out.println("This is my first code");
    }
}

class cat extends Animal {
    // The makeSound() method in the cat class overrides the method in the Animal class.
    @Override
    public void makeSound() {
        System.out.println("I am a cat, I say owww, owww");
    }
}

class Inheritance {
    public static void main(String[] args) {
        Animal obj1 = new cat(); // Create a cat object and store it in an Animal reference
        obj1.makeSound(); // Calls the overridden method in the cat class
    }
}










